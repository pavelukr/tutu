<%= form_with(model: [:admin, train]) do |form| %>
  <% if train.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('admin.railway_stations.errors') %></h2>

      <ul>
        <% train.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :current_station, "Current station" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :route, "Route" %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @train.new_record? ? 'Create' : 'Edit' }"%>
  </div>
<% end %>
