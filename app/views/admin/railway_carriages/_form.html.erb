<%= form_for [:admin, @train, @railway_carriage.becomes(RailwayCarriage)] do |form| %>

  <% if @railway_carriage.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('admin.railway_stations.errors')%></h2>

      <ul>
        <% @railway_carriage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, RailwayCarriage::TYPES, selected: @railway_carriage.type%>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :seat_place %>
    <%= form.text_field :seat_place %>
  </div>


  <div class="actions">
    <%= form.submit  'Create' %>
  </div>
<% end %>
