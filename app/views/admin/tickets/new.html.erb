<%= form_for [:admin, @train, @ticket], admin_train_tickets_url => { :action => :create,
                                         :begin_station => @begin_station,
                                         :end_station => @end_station } do |form| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('admin.railway_stations.errors') %> </h2>

      <ul>
        <% @ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :begin_station %><br>
    <%= hidden_field_tag :begin_station, params[:begin_station] %>
    <%= form.text_field :begin_station, value: @begin_station.title, disabled: true %>
  </div>

  <div class="field">
    <%= form.label :end_station %><br>
    <%= hidden_field_tag :end_station, params[:end_station] %>
    <%= form.text_field :end_station, value: @end_station.title, disabled: true %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :middle_name %>
    <%= form.text_field :middle_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :passport %>
    <%= form.text_field :passport %>
  </div>

  <div class="actions">
    <%= form.submit 'Create' %>
  </div>
<% end %>
